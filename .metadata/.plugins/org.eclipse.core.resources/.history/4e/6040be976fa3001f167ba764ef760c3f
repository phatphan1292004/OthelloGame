package main;

import java.awt.*;
import javax.swing.*;
import javax.swing.border.LineBorder;

public class Tile extends JButton {
    private int row;
    private int col;
    private GUI gui;
    private int state; // 1 for black, -1 for white, 0 for empty
    private Color bg = new Color(45, 174, 82);
	private Board board;

    // Constructor for Tile
    public Tile(GUI gui, int row, int col) {
        this.gui = gui;
        this.row = row;
        this.col = col;
        this.setBackground(bg);  // Default background color
        super.setBorder(new LineBorder(Color.BLACK));
        this.setPreferredSize(new Dimension(40, 40));
        this.addActionListener(e -> gui.onClick(row, col));
    }

    public int getRow() {
        return row;
    }

    public int getCol() {
        return col;
    }

    public int getState() {
        return state;
    }

    public void setState(int pieceColor) {
        if (pieceColor == 1) {
            // Đặt biểu tượng quân cờ đen
            super.setIcon(new ImageIcon("src/blackPiece.gif"));
        } else if (pieceColor == -1) {
            // Đặt biểu tượng quân cờ trắng
            super.setIcon(new ImageIcon("src/whitePiece.png"));
        }
    }
    
    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);

        // Vẽ viền hình tròn
        if (getBorder() instanceof LineBorder) {
            LineBorder border = (LineBorder) getBorder();
            g.setColor(border.getLineColor());
            g.fillOval(2, 2, getWidth() - 4, getHeight() - 4); // Vẽ hình tròn với độ dày viền là 2 px
        }
    }

    
    public void setHighlighted(boolean mode) {
        if (mode) {
            // Nếu là trạng thái nổi bật, tạo hình tròn với đường viền màu trắng
            setBorder(new LineBorder(Color.WHITE));
        } else {
            // Nếu không, viền sẽ là hình tròn với màu đen
            setBorder(new LineBorder(Color.BLACK));
        }
        repaint();  // Vẽ lại nút để cập nhật viền hình tròn
    }
}
